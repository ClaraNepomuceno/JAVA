package informacoes;
import java.util.Scanner;

public class cardapio {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner scanner = new Scanner(System.in);
int menu;
int NumeroCardapio;
boolean executando = true;


while(executando) {
System.out.println("===Lanchonete Bom gosto===");
System.out.println("1 - Comida");
System.out.println("2 - Bebida");
System.out.println("3 - Sobremesa");
System.out.println("4 - sair");
System.out.println("Digite uma das opções:");
menu = Integer.parseInt(scanner.nextLine());

if(menu == 1) {
	System.out.println("1 - Crepe de frango - R$17,50");
	System.out.println("2 - Pão pizza - R$6,50");
	System.out.println("3 - Misto quente - R$5,50");
	System.out.println("Digite as opções desejadas: ");
	NumeroCardapio = Integer.parseInt(scanner.nextLine());
	System.out.println("Pedido realizado com sucesso! Os números solicitados foram: " + NumeroCardapio);
	System.out.println("");

	
}
else if(menu == 2) { 
	System.out.println("1 - Refrigerante sabor uva(300ml) - R$4,50");
	System.out.println("2 - Suco de laranja(300ml) - R$4,50");
	System.out.println("3 -Suco de Maracujá(300ml)  - R$4,50");
	System.out.println("Digite as opções desejadas: ");
	NumeroCardapio = Integer.parseInt(scanner.nextLine());
	System.out.println("Pedido realizado com sucesso! Os números solicitados foram: " + NumeroCardapio);
	System.out.println("");


}

else if (menu == 3 ) {
	System.out.println("1 - Bolo de chocolate - R$8,00");
	System.out.println("2 - Sorvete de baunilha - R$4,50");
	System.out.println("3 -Mousse de Maracujá  - R$5,00");	
	System.out.println("Digite as opções desejadas: ");
	NumeroCardapio = Integer.parseInt(scanner.nextLine());
	System.out.println("Pedido realizado com sucesso! Item: " + NumeroCardapio);
	System.out.println("");

}

else if (menu ==  4) {
	System.out.println("Saindo do sistema!");
	executando = false;
	return;
}

else {
	System.out.println("Digite um número válido");
	}

}
scanner.close();
	}

}
